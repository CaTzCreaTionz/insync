<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <b><%= link_to room.name, room_path(room), class: "nav-link room-nav-link" %></b>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">There are no rooms</div>
<% end %>

<div class="mb-3 link-room">
  <br>
  <%= link_to new_room_path do %>
    Create a room
  <% end %>
</div>
